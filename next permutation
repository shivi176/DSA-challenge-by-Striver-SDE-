class Solution {
    public void nextPermutation(int[] nums) {
        int n = nums.length;
        int i = n - 2;

        // first number from right that will be smaller than the next one(the drop)
        while (i >= 0 && nums[i] >= nums[i + 1]) {
            i--;
        }

        //find the closest number to the drop number and swap them
        if (i >= 0) {
            int j = n - 1;
            while (nums[j] <= nums[i]) {
                j--;
            }
            int temp = nums[i];
            nums[i] = nums[j];
            nums[j] = temp;
        }

        // after swapping reverse the the list after the original position of the original drop number
        int start = i + 1, end = n - 1;
        while (start < end) {
            int temp = nums[start];
            nums[start] = nums[end];
            nums[end] = temp;
            start++;
            end--;
        }
    }
}
